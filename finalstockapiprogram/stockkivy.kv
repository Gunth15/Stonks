WindowManager:
    SubmitTicker:
    LoadingScreen:
    GraphDisplays:

<SubmitTicker>
    name:"StockTickerEntry"
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            Label:
                text: "Type Ticker Here:"
                font_size: 50
            TextInput:
                id: tickerkivyinput
                multiline: False
                font_size: 128
        Button:
            text: "Submit"
            on_press: app.root.current = "loading"
            on_press: app.clicked(tickerkivyinput.text)

<LoadingScreen>
    name:"loading"
    Label:
        text: "Loading..."

<GraphDisplays>
    name:"DisplayTerminal"
    GridLayout:
        cols:2
        Image:
            id: free
            source:'freecashflowgraph.jpg'
            size: self.texture_size
            allow_stretch:True
            keep_ratio:False
        Image:
            id: debt
            source:'debtequityratiograph.jpg'
            size: self.texture_size
            allow_stretch:True
            keep_ratio:False

        Button:
            text:"Go Back"
            on_release: app.root.current = "StockTickerEntry"
